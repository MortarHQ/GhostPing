{
  "name": "mortar-daemon",
  "version": "0.0.0",
  "private": false,
  "type": "module",
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "start": "cross-env NODE_ENV=production tsx -r tsconfig-paths/register src/appServer.ts",
    "dev": "cross-env NODE_ENV=development tsx watch --clear-screen=false -r tsconfig-paths/register src/appServer.ts",
    "mc:ping": "cross-env NODE_ENV=test tsx -r tsconfig-paths/register src/mcClient.ts",
    "test": "pnpm run mc:ping"
  },
  "dependencies": {
    "cross-env": "^7.0.3",
    "dayjs": "^1.11.10",
    "dotenv": "^16.4.5",
    "ini": "^5.0.0",
    "pino": "^8.20.0",
    "pino-pretty": "^11.0.0",
    "toml": "^3.0.0",
    "tsconfig-paths": "^4.2.0",
    "varint": "^6.0.0"
  },
  "devDependencies": {
    "@types/ini": "^4.1.1",
    "@types/node": "^20.12.7",
    "@types/varint": "^6.0.3",
    "tsx": "^4.7.2",
    "typescript": "^5.4.5"
  }
}
